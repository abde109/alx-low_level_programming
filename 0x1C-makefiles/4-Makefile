# Variables
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = $(SRC:.c=.o)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -rf

# Rules
all: $(OBJ) 
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	
clean: 
	$(RM) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
