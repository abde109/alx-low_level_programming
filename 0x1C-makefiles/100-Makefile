# Variables
CC := gcc
SRC := main.c school.c
NAME := school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

# Phony targets
.PHONY: all clean oclean fclean re

# Rule: all
all: $(NAME)

$(NAME): m.h $(SRC)
	@$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	-@$(RM) *~ $(NAME)

oclean:
	-@$(RM) *.o

fclean: clean oclean

re: oclean all
