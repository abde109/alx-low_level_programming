# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

# Phony targets
.PHONY: all clean oclean fclean re

# Rule: all
all: $(NAME)

$(NAME): m.h $(SRC)
	$$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean: 
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean alll
